{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "http://jsonschema.net",
	"description": "Climbing Stair API",
	"required": [
		"numberOfSteps",
		"stepsPerStride"
	],
	"type": "object",
	"properties": {
		"numberOfSteps": {
			"type": "array",
			"minItems": 1,
			"maxItems": 30,
			"items": {
				"type": "number",
				"minimum": 1,
				"maximum": 20
			}
		},
		"stepsPerStride": {
			"type": "number",
			"minimum": 1,
			"maximum": 4
		}
	}
}